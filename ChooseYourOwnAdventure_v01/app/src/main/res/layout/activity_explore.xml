<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_light"
    android:orientation="vertical"
    tools:context="com.example.palmdigital.chooseyourownadventure_v01.ExploreActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/tvTitleExplore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Your Own Adventure_v01"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/tvStoryExplore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You approach a glowing green bucket of ooze. Worried that you will get in trouble, you pick up the bucket."
        android:textAlignment="center"
        android:textSize="25sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/tvQuestionExplore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do you want to pour the ooze into the 'backyard' or 'toilet'?"
        android:textAlignment="center"
        android:textSize="30sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonLeft_Backyard"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background_normal"
            android:text="Backyard"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonRight_Toilet"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background_normal"
            android:text="Toilet"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>
